---
import "../styles/global.css";
import Navbar from "../components/navbar.astro";
import Footer from "../components/Footer.astro";

const {title} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
  </head>
  <body class="bg-neutral-900 text-white min-h-screen grid grid-rows-[auto_1fr_auto]">
    <!-- Navbar -->
    <div class="max-w-5xl mx-auto px-6 pt-8 w-full">
      <Navbar />
    </div>

    <!-- Main content with sidebar layout -->
    <div class="max-w-5xl mx-auto px-6 pt-6 flex gap-6 items-start w-full">
      <main class="flex-1 prose prose-invert mb-5 prose-lg max-w-none mx-0 w-full min-w-0 overflow-hidden">
        <slot />
      </main>

      <aside class="w-64 flex-none flex-shrink-0 sticky top-8 h-fit border-l border-neutral-700 pl-4">
        <div class="sticky top-8 max-h-screen overflow-y-auto">
          <slot name="toc" class="text-sm"/>
        </div>
      </aside>
    </div>

    <!-- Footer -->
    <Footer />
  </body>
</html>